<% if notice %>
  <div class="success">
    <p><%= notice %></p>
  </div>
<% end %>

<div class="breadcrumbs">
  <a href="/admin/dashboard">Administrator Dashboard</a>
  <span> / </span>
  <%= link_to 'Buildings', admin_buildings_path %>
  <span> / </span>
  <%= link_to @building.name, admin_building_path(@building) %>
  <span> / </span>
  <%= link_to 'Classrooms', admin_building_classrooms_path %>
</div>

<div class="classroomContainer">
  <% @classrooms.each do |classroom| %>
    <%= link_to admin_building_classroom_path(classroom.building, classroom) do %>
      <div class="classroomBox">
        <div class="classroomHeader">
          <span class="title"><%= classroom.name %></span>
          <span class="description"><%= classroom.building.name %></span>
        </div>
        <div class="classroomFree">
          <p>Free until 14:30</p>
        </div>
        <div class="classroomContent">
          <p><%= classroom.options.map { |option| option.name }.join(', ').html_safe %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to admin_building_path(@building) do %>
  <div class="backButton">
    <p>Back</p>
  </div>
<% end %>
