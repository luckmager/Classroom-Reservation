<div class="reservationFormBg">
  <div class="reservationForm" id="reservationForm">
    <div class="hideReservationForm" onclick="hideReservationForm()">&#10006</div>
    <h1>Create a reservation</h1>
    <%= form_with(model: reservation, local: true) do |form| %>
      <% if reservation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being booked:</h2>

          <ul>
            <% reservation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field" style='display: none;'>
        <%= form.label :classroom_id %>
        <%= form.text_field :classroom_id, id: :classroom_id, value: params[:id] %>
      </div>

      <div class="field">
        <%= form.label :date %>
        <%= form.text_field :date, data:{ provide:'datepicker' }, id: :reservation_date %>
      </div>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, id: :reservation_title %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description, id: :reservation_description %>
      </div>

      <div class="field">
        <%= form.label :from_block %>
        <%= form.text_field :from_block, id: :reservation_from_block %>
      </div>

      <div class="field">
        <%= form.label :to_block %>
        <%= form.text_field :to_block, id: :reservation_to_block %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>