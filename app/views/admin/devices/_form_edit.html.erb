<%= form_for [:admin, @building, @classroom, @device] do |form| %>
  <% if device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :device_name %>
  </div>

  <div class="field">
    <%= form.label :authentication_token %>
    <%= form.text_field :auth, id: :device_auth %>
    <div id="generateAuth" class="generateButton" onClick="generateToken();">Generate token</div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
