<p id="notice"><%= notice %></p>

<div class="breadcrumbs">
  <%= link_to 'Classrooms', classrooms_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Classroom</th>
	    <th>Building</th>
      <th>Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name %></td>
		    <td><%= classroom.building.name %></td>
        <td><%= classroom.options.map { |option| option.name }.join(', ').html_safe %></td>
        <td><%= link_to 'Show', classroom %></td>
		<% if user_signed_in? %>
			<td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
			<td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classroom', new_classroom_path %>
