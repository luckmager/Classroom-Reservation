<%= form_with(model: reservation, local: true) do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being booked:</h2>

      <ul>
      <% reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :reservation_user_id %>
  </div>
  
  <div class="field">
    <%= form.label :classroom_id %>
    <%= form.text_field :classroom_id, id: :reservation_classroom_id %>
  </div>
  
  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date, id: :reservation_date %>
  </div>
  
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :reservation_title %>
  </div>
  
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :reservation_description %>
  </div>
  
  <div class="field">
    <%= form.label :from %>
    <%= form.text_field :from, id: :reservation_from %>
  </div>
  
  <div class="field">
    <%= form.label :to %>
    <%= form.text_field :to, id: :reservation_to %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
